<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header"><%= blog.title %></div>
    <div class="ui top attached">
        <div class="item">
            <img class="ui centered rounded image" src="<%= blog.image %>" alt="">
            <div class="content">
                <span>Created on <%= blog.created.toDateString() %></span>
            </div>
            <div class="ui segment">
                <p><%- blog.body %></p>
                <!-- we use <%- %> tags here to render the code as well -->
            </div>
            <a class="ui orange basic button" href="/blogs/<%= blog._id %>/edit">Edit Post</a>
            <form id="delete" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST"> <!-- mehod-override to use the delete route-->
                <button class="ui red basic button">Delete post</button>
            </form>
        </div>
    </div>
</div>

<% include ./partials/footer %>