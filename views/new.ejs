<% include ./partials/header %>

<div class="ui main text container segment">
    <h2 class="ui icon header center aligned">
        <i class="edit outline icon"></i>
        <div class="content">New Blog</div>
        <div class="sub header">Create your new blog post here</div>
    </h2>
    <!-- <div class="ui huge header">New Blog</div> -->

    <form class='ui form' action="/blogs" method="POST">
        <div class="field">
            <label for="title">Title</label>
            <input type="text" name='blog[title]' placeholder="title" id="title" required>
        </div>
        <div class="field">
            <label for="image">Image</label>
            <input type="text" name='blog[image]' placeholder="image" id="image">
        </div>
        <div class="field">
            <label for="blogcontent">Blog Content</label>
            <textarea name="blog[body]" id="blogcontent" cols="30" rows="10" required></textarea>
        </div>
        <input class="ui violet big basic button" type="submit" value="Submit!">
    </form>

</div>

<% include ./partials/footer %>