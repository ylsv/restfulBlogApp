<% include ./partials/header %>

<div class="ui main text container segment">
    <h2 class="ui icon header center aligned">
        <i class="eraser icon"></i>
        <div class="content">Edit post named <%= blog.title %></div>
        <div class="sub header">Edit an existing post here</div>
    </h2>

    <form class='ui form' action="/blogs/<%= blog._id %>?_method=PUT" method="POST"> <!-- we use POST request instead of PUT here and a cheat ending "?_method=PUT" because HTML forms do not support put requests -->
        <div class="field">
            <label for="title">Title</label>
            <input type="text" name='blog[title]' value="<%= blog.title %>" id="title" required>
        </div>
        <div class="field">
            <label for="image">Image</label>
            <input type="text" name='blog[image]' value="<%= blog.image %>" id="image">
        </div>
        <div class="field">
            <label for="blogcontent">Blog Content</label>
            <textarea name="blog[body]" id="blogcontent" cols="30" rows="10" required><%= blog.body %></textarea>
        </div>
        <input class="ui black big basic button" type="submit" value="Submit!">
    </form>

</div>

<% include ./partials/footer %>