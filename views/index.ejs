<% include ./partials/header %>

<div class="ui main text container">
    <div class="ui huge header center aligned">The Random Blog App</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% blogs.forEach(function(blog){ %>
                <div class="item">
                    <div class="image">
                        <img src="<%= blog.image %>" alt="">
                    </div>
                    <div class="content">
                        <a href="/blogs/<%= blog.id %>" class="header" href="/"><%= blog.title %></a>
                        <div class="meta">
                            <span>Created on <%= blog.created.toDateString() %></span>
                        </div>
                        <div class="description">
                            <p><%- blog.body.substring(0, 100) %>...</p>
                        </div>
                        <div class="extra">
                            <a class="ui floated basic violet button" href="/blogs/<%= blog.id %>">
                                Read More
                                <i class="right chevron icon"></i>
                            </a>
                        </div>
                    </div> 
                </div>
            <% }) %>
        </div>
    </div>
</div>
<% include ./partials/footer %>